# needs to match the lambda architecture
FROM public.ecr.aws/lambda/python:3.11-x86_64

COPY requirements.txt .
RUN  pip3 install -r requirements.txt --target "${LAMBDA_TASK_ROOT}"
COPY main.py ${LAMBDA_TASK_ROOT}

CMD ["main.handler"]